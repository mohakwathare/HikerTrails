@model IEnumerable<HikerTrails.Models.Hikes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Hikes</h2>

@Html.ActionLink("Check out on Calendar", "ViewCalendar", "Hikes")
@Html.ActionLink("Check out on Map", "ViewMap", "Hikes")
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label col-md-2" for="Name">Image</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-thumbnail" src="@Url.Content("~/Uploads/"+item.ImagePath)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("View", "ViewHike", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />